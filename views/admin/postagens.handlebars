<h1>Lista de Postagens: </h1>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
    <div class="card mt-3 bg-dark text-white">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <h6>{{descricao}}</h6>
            <small>Data: {{date}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a class="mt-2 btn btn-primary" href="/admin/postagens/editar/{{_id}}">Editar</a>
            <a class="mt-2 btn btn-danger" href="/admin/postagens/excluir/{{_id}}">Excluir</a>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">Sem postagens</h3>
{{/each}}