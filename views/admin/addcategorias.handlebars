{{#each erros}}
    <div class="alert alert-danger">
        <span class="font-weight-bold">{{texto}}</span>
    </div>
{{else}}
{{/each}}

<h3>Nova Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="nome">Nome</label>
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da categoria" />
            <label class="mt-3" for="nome">Slug</label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria" />
            <button type="submit" class="btn btn-success mt-3">Adicionar Categoria</button>
        </form>
    </div>
</div>