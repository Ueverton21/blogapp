{{#each erros}}
    <div class="alert alert-danger">
        <span class="font-weight-bold">{{texto}}</span>
    </div>
{{else}}
{{/each}}

<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título</label>
            <input class="form-control" type="text" name="titulo" id="titulo" placeholder="Titulo da postagem" />
            <label class="mt-3" for="slug">Slug</label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da postagem" />
            <label class="mt-3" for="descricao">Descrição</label>
            <input class="form-control" type="text" name="descricao" id="descricao" placeholder="Descrição da postagem" />
            <label class="mt-3" for="categoria">Categoria</label>
            <select name="categoria" id="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <label class="mt-3" for="conteudo">Conteúdo</label>
            <textarea class="form-control" name="conteudo" id="conteudo"></textarea>
            <button type="submit" class="btn btn-success mt-3">Adicionar Postagem</button>
        </form>
    </div>
</div>