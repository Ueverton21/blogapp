<h1>Lista de categorias: </h1>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-3 bg-dark text-white">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <span>Slug: {{slug}}</span><br>
            <span>Data de criação: {{date}}</span><br><br>

            <a class="btn btn-primary" href="/admin/categorias/editar/{{_id}}">Editar</a>
            <a class="btn btn-danger" href="/admin/categorias/excluir/{{_id}}">Excluir</a>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">Sem categorias</h3>
{{/each}}