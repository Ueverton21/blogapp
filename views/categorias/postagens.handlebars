<h2>Postagens da categoria: {{categoria.nome}}</h2>
{{#each postagens}}
    <div class="card mt-3 text-black mb-3" style="background-color: rgb(238, 255, 248);">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{categoria.nome}}</small><br>
            <small>Data de publicação: {{date}}</small>
            <hr>
            <a class="mt-2 btn btn-dark" href="/postagem/{{slug}}">Ler mais</a>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">Sem postagens</h3>
{{/each}}