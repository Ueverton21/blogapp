{{#if postagem}}
    <div class="card mt-3 text-black" style="background-color: #EEE;">
        <div class="card-body">
            <h4>{{postagem.titulo}}</h4>
            <p>{{postagem.descricao}}</p>
            <p>{{postagem.conteudo}}</p>
            <small>{{postagem.categoria.nome}}</small><br>
            <small>Data de publicação: {{postagem.date}}</small>
            <hr>
        </div>
    </div>
{{/if}}