<h4>Login:</h4>
{{#each erros}}
    <div class="alert alert-danger">
        <span class="font-weight-bold">{{texto}}</span>
    </div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form method="post" action="/usuarios/login">
            <label for="email">Email</label>
            <input id="email" class="form-control" name="email" placeholder="Digite seu email" ><br>
            <label for="senha">Senha</label>
            <input id="senha" type="password" class="form-control" placeholder="Digite sua senha" name="senha" ><br>
            <button type="submit" class="btn btn-success mt-2">Entrar</button>
        </form>
    </div>
</div>