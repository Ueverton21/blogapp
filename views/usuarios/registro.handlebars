<h4>Crie sua conta agora:</h4>
{{#each erros}}
    <div class="alert alert-danger">
        <span class="font-weight-bold">{{texto}}</span>
    </div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <form method="post" action="">
            <label for="nome">Nome</label>
            <input id="nome" class="form-control" name="nome" placeholder="Digite seu nome" ><br>
            <label for="email">Email</label>
            <input id="email" class="form-control" name="email" placeholder="Digite seu email" ><br>
            <label for="senha">Senha</label>
            <input id="senha" type="password" class="form-control" name="senha" ><br>
            <label for="senha2">Digite a senha novamente</label>
            <input id="senha2" type="password" class="form-control" name="senha2" >
            <button type="submit" class="btn btn-success mt-4">Confirmar</button>
        </form>
    </div>
</div>